<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
		 "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap>
<typeAlias alias="studentBo" type="com.zero2ipo.eeh.student.bo.StudentBo"/>
<resultMap class="studentBo" id="studentMap">
	<result property="id" column="id"/>
	<result property="classId" column="classId"/>
	<result property="name" column="name"/>
	<result property="xhnum" column="xhnum"/>
	<result property="sex" column="sex"/>
	<result property="password" column="password"/>
</resultMap>
	<!--根据id查询查询-->
	<select id='findStudentById' resultClass='studentBo'>
		SELECT
		id,
		classId,
		name,
		xhnum,
		sex,
		password
		FROM
			eeh_student
		WHERE  id=#id#
	</select>

<!--查询-->
<select id='findStudentList' resultMap='studentMap'>
SELECT
	id,
	classId,
	name,
	xhnum,
	sex,
	password
FROM
	eeh_student
<dynamic prepend="WHERE">
<isNotEmpty prepend="AND" property="name">
INSTR(name,#name#)>0
</isNotEmpty>
</dynamic>
</select>
<!--查询个数-->
	<select id='findStudentListCount' resultClass='java.lang.Integer'>
		SELECT
		count(0)
		FROM
		eeh_student
		<dynamic prepend="WHERE">
			<isNotEmpty prepend="AND" property="name">
				INSTR(name,#name#)>0
			</isNotEmpty>
		</dynamic>
	</select>
<!--新增-->
<insert id="add_Student" parameterClass="studentBo">
	INSERT INTO
		eeh_teachingbuilding(
		classId,
		name,
		xhnum,
		sex,
		password
	)VALUES(
		#classId#,
		#name#，
		#xhnum#，
		#sex#,
		#password#
	)
</insert>
<!--修改-->
<update id="upd_Student" parameterClass="studentBo">
	UPDATE
		eeh_student
	SET
	name=#name#,	
	floors=#floors#,
	classId=#classId#,
	xhnum=#xhnum#,
	sex=#sex#
	<isNotEmpty prepend="," property="password">
		password=#password#
	</isNotEmpty>
 	WHERE
	ID=#id#
</update>
<!--删除-->
<delete id="del_Student" parameterClass="java.util.Map">
	DELETE FROM 
	eeh_student
	WHERE
	ID IN
	<iterate property="id" conjunction="," close=")" open="(">
	#id[]#
	</iterate> 
</delete>
</sqlMap>

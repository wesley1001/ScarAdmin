<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
		 "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap>
	<typeAlias alias="ggwash_coupon" type="com.zero2ipo.bsb.entity.GgwashCoupon" />
	<resultMap class="Ggwash_coupon" id="Ggwash_coupon">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="price" column="price" />
		<result property="oprice" column="oprice" />
		<result property="status" column="status" />
		<result property="number" column="number" />
		<result property="info" column="info" />
		<result property="createTime" column="create_time" />
		<result property="pic" column="pic" />
	</resultMap>
<!--查询-->
	<select id='findGgwash_couponList' resultMap='Ggwash_coupon'>
 		SELECT
 			id,
 			name,
			price,
		    oprice,
		    number,
		    create_time,
		    status,
		    info,
		    pic
		FROM
			GGWASH_COUPON
    </select>
	<select id='findCouponById' resultMap='Ggwash_coupon'>
 	SELECT
 			id,
 			name,
			price,
		    oprice,
		    number,
		    create_time,
		    status,
		    info,
		    pic
		FROM
			GGWASH_COUPON
		where id=#id#
    </select>
	<select id='findGgwash_couponListCount' resultClass='java.lang.Integer'>
 		SELECT
			count(0)
		FROM
			GGWASH_COUPON
	</select>
<!--新增-->
	<insert id="addCoupon" parameterClass="ggwash_coupon">
 	INSERT INTO
		GGWASH_COUPON(
 			name,
			price,
		    oprice,
		    number,
		    create_time,
		    status,
		    info,
		    pic
		     )VALUES(
		#name#, #price#, #oprice# ,#number#,now(), #status#,#info#,#pic#)
		</insert>
<!--修改-->
	<update id="updCoupon" parameterClass="ggwash_coupon">
	 UPDATE GGWASH_COUPON
	 SET
		name=#name#, price=#price#, oprice=#oprice#,
		status=#status#,number=#number#,info=#info#,pic=#pic#
	WHERE ID=#id#
	</update>
<!--删除-->
	<delete id="delCoupon" parameterClass="java.util.Map">
		DELETE FROM GGWASH_COUPON WHERE ID IN
		<iterate property="id" conjunction="," close=")" open="("> #id[]#
		</iterate>
	</delete>
</sqlMap>